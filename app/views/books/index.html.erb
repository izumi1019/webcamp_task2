<p><%= flash[:notice] %></p>
<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  <tr>
 <% @books.each do |f| %>
      <td><%= f.title %></td>
      <td><%= f.body %></td>
      <td><%= link_to "Show", book_path(f.id) %></td>
    <td><%= link_to "edit", edit_book_path(f.id) %></td>
    <td><%= link_to "Destroy", book_path(f.id), method: :delete %></td>
 </tr>
  <% end %>
</table>

<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
<h3><%= @book.errors.count %> error prohibited this book from being saved:</h3>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<label>title</label>
  <%= f.text_field :title %>
<label>body</label>
  <%= f.text_area :body %>
<%= f.submit "Create Book" %>
<% end %>

