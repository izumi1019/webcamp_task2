<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  <tr>
      <% @books.each do |f| %>
      <td><%= f.title %></td>
      <td><%= f.body %></td>
      <% end %>
      <td></td>
  </tr>
</table>

<h1>New book</h1>
<%= form_with model:@book,  local:true do |f| %>
<label>title</label>
  <%= f.text_field :title %>
<label>body</label>
  <%= f.text_area :body %>
<%= f.submit "Create Book" %>
<% end %>
